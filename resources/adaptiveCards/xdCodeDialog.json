{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Welcome to the XD Chat Bot!",
            "wrap": true,
            "fontType": "Default",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "Please enter your XD Activation Code to confirm your identity:",
            "wrap": true,
            "color": "Attention"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Input.Text",
                    "placeholder": "XD Activation Code",
                    "maxLength": 20,
                    "id": "xdCode",
                    "inlineAction": {
                        "type": "Action.Submit",
                        "title": "Enter"
                    }
                }
            ]
        }
    ]
}